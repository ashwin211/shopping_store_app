<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/deals"
        android:orientation="vertical">

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp">
        <ImageView
            android:id="@+id/img_lap"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/laptop"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp">
     <ImageView
         android:id="@+id/img_mob"
         android:layout_width="match_parent"
         android:layout_height="@dimen/_150sdp"
         android:layout_marginTop="@dimen/_8sdp"
         android:background="@drawable/mobiles"
         android:visibility="visible"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp">
     <ImageView
         android:id="@+id/img_ha"
         android:layout_width="match_parent"
         android:layout_height="@dimen/_150sdp"
         android:layout_marginTop="@dimen/_8sdp"
         android:background="@drawable/headphone"
         android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp">
        <ImageView
            android:id="@+id/img_watch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/watch"
            android:visibility="visible"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp">
      <ImageView
          android:id="@+id/img_pen"
          android:layout_width="match_parent"
          android:layout_height="@dimen/_150sdp"
          android:layout_marginTop="@dimen/_8sdp"
          android:background="@drawable/pendrive"/>
    </LinearLayout>


  </LinearLayout>

</ScrollView>
  </LinearLayout>



